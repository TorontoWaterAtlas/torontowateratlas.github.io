---
export interface Project {
  title: string;
  subtitle?: string;
  image: string;
  href: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  projects: Project[];
}

const { title, subtitle, projects } = Astro.props;
---

<section class="project-grid-section">
  {title && (
    <div class="section-header">
      <h2>{title}</h2>
      {subtitle && <p>{subtitle}</p>}
    </div>
  )}
  
  <div class="projects-grid">
    {projects.map((project) => (
      <a href={project.href} class="project-tile">
        <img src={project.image} alt={project.title} class="project-image" />
        <div class="project-overlay"></div>
        <div class="project-content">
          <div class="project-text">
            <h3 class="project-title">{project.title}</h3>
            <!-- span class="arrow">â†’</span -->
            {project.subtitle && (
              <p class="project-subtitle">{project.subtitle}</p>
            )}
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .project-grid-section {
    padding: 4rem 1rem;
    background: #111827;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 80rem;
    margin-left: auto;
    margin-right: auto;
  }

  .section-header h2 {
    font-size: 1.875rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.125rem;
    color: #9ca3af;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-tile {
    position: relative;
    display: block;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: 0.5rem;
    background: #1f2937;
    text-decoration: none;
  }

  .project-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-tile:hover .project-image {
    transform: scale(1.1);
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.4) 40%,
      rgba(0, 0, 0, 0.1) 100%
    );
    transition: background 0.3s ease;
  }

  .project-tile:hover .project-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.95) 0%,
      rgba(0, 0, 0, 0.5) 40%,
      rgba(0, 0, 0, 0.2) 100%
    );
  }

  /* Content wrapper - anchored to bottom */
  .project-content {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 1.5rem;
  }

  /* Text container */
  .project-text {
    position: relative;
  }

  /* Title - consistent positioning */
  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin: 0;
    line-height: 1.4;
    transition: transform 0.3s ease;
  }

  @media (min-width: 768px) {
    .project-title {
      font-size: 1.375rem;
    }
  }

  .project-tile:hover .project-title {
    transform: translateY(-0.25rem);
  }

  /* Arrow on its own line below title */
  .arrow {
    display: block;
    color: white;
    font-size: 1.25rem;
    margin-top: 0.25rem;
    opacity: 0.8;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .project-tile:hover .arrow {
    transform: translateX(6px);
    opacity: 1;
  }

  /* Subtitle - appears on hover */
  .project-subtitle {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.75);
    margin: 0.5rem 0 0 0;
    line-height: 1.5;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.3s ease, opacity 0.3s ease, margin 0.3s ease;
  }

  .project-tile:hover .project-subtitle {
    max-height: 100px;
    opacity: 1;
    margin-top: 0.5rem;
  }
</style>
